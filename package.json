{
  "name": "poemboothcertificate",
  "version": "1.0.0",
  "description": "CLI tool for registering Poem Booth devices with certificate generation",
  "main": "dist/index.js",
  "bin": {
    "device-setup": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "package": "pkg dist/index.js --target node18-win-x64 --output dist/device-setup.exe"
  },
  "keywords": ["poem-booth", "device-registration", "certificate"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "inquirer": "^9.2.12",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "node-forge": "^1.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/node-forge": "^1.3.10",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "pkg": "^5.8.1"
  }
}
